@model To_do_List.Models.Task

@{
    ViewData["Title"] = "Crear Tareas";
}

<h1>@ViewData["Title"]</h1>

<div class="text-center">
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Name_Task" class="control-label">Nombre de la tarea</label>
            <input asp-for="Name_Task" class="form-control" />
            <span asp-validation-for="Name_Task" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description_Task" class="control-label">Descripción de la tarea</label>
            <input asp-for="Description_Task" class="form-control" />
            <span asp-validation-for="Description_Task" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Time" class="control-label">Tiempo de la tarea</label>
            <input asp-for="Time" class="form-control" />
            <span asp-validation-for="Time" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Id_Status_Task" class="control-label">Estado de la tarea</label>
            <select asp-for="Id_Status_Task" class="form-control" asp-items="ViewBag.Id_Status_Task"></select>
            <span asp-validation-for="Id_Status_Task" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>
