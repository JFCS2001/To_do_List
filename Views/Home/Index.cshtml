@model IEnumerable<To_do_List.Models.Task>

@{
    ViewData["Title"] = "Home Page";
}

<script src="js/site.js"></script>

<div class="text-center">
    <h1>Tareas agendadas</h1>
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>Nombre de la Tarea</th>
                    <th>Descripción</th>
                    <th>Tiempo</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var task in Model)
                    {
                        <tr>
                            <td>@task.Name_Task</td>
                            <td>@task.Description_Task</td>
                            <td>@task.Time</td>
                            <td><select>@task.Status_Task.Name_Status_Task</select></td>
                            <td><button>Eliminar</button> <button>Editar</button></td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5">No hay tareas disponibles.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
